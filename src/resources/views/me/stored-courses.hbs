<div class='my-courses mt-4'>
  <h3>Khóa học của tôi</h3>
  <table class='table mt-4'>
    <thead>
      <tr>
        <th scope='col'>#</th>
        <th scope='col'>Tên khóa học</th>
        <th scope='col'>Mô tả</th>
        <th scope='col'>Ngày tạo</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <th scope='row'>{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td>{{this.createdAt}}</td>
          <td>
            <a href='/course/edit/{{this._id}}' class='btn btn-edit'>Sửa</a>

          </td>
          <td>
            <a
              href=''
              class='btn btn-delete'
              data-bs-toggle='modal'
              data-bs-target='#modal-confirm-delete'
              data-bs-id='{{this._id}}'
            >Xóa</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{!Confirm delete }}

<div class='modal' tabindex='-1' id='modal-confirm-delete' data-bs-theme='dark'>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title'>Xóa khóa học</h5>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>
        <p>Bạn xác nhận xóa khóa học này không?</p>
      </div>
      <div class='modal-footer'>
        <button
          type='button'
          class='btn btn-confirm-delete'
          id='btn-delete-confirm'
        >Xác nhận xóa</button>
        <button
          type='button'
          class='btn btn-cancel'
          data-bs-dismiss='modal'
        >Hủy</button>
      </div>
    </div>
  </div>
</div>

